{
  "compilerOptions": {
    "declaration": true, // Generate .d.ts files for types
    "emitDeclarationOnly": true, // Only emit type declarations
    "outDir": "dist", // Output directory for the build
    "moduleResolution": "node", // Resolve modules
    "target": "ES2020", // Target a modern version of JavaScript
    "module": "CommonJS", // CommonJS for Node.js libraries, or ESNext for ES modules
    "strict": true, // Enable strict type checking
    "esModuleInterop": true // Enable ES module interop
  },
  "include": ["src/**/*"]
}
